{
  "name": "jest-project",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all dev",
    "transpile": "babel . --out-dir dist/ --ignore ./node_modules",
    "clean": "rimraf dist",
    "build": "npm-run-all clean transpile",
    "postbuild": "shx cp -R package.json dist",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "server": "node ./dist/server.js",
    "watch:dev": "nodemon",
    "cleanup:testresults": "rimraf TestResults",
    "eslint": "eslint .",
    "pretest": "NODE_ENV=test npm run cleanup:testresults && npm run eslint && sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test",
    "jest": "NODE_ENV=test jest",
    "test": "NODE_ENV=test npm run jest",
    "posttest": "NODE_ENV=test && sequelize db:migrate:undo:all --env test"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.10",
    "tedious": "^8.3.0",
    "yup": "^0.29.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./TestResults/coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "TestResults",
          "outputName": "testresults.xml"
        }
      ]
    ],
    "coverageReporters": [
      "text",
      "html",
      "cobertura"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sequelize-cli": "^5.5.1",
    "shx": "^0.3.2",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2"
  }
}
